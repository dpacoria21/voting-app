{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": 0,
        "@typescript-eslint/no-empty-interface": "off",
        "react/no-unstable-nested-components": 0,
        "no-unused-vars": "off", // activar cuando se haga el deploy
        "react-native/no-inline-styles": 0,
        "no-undef": "off"
    }
}